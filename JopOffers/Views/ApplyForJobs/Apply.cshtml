@model JopOffers.Models.ApplyForJobs

@{
    ViewData["Title"] = "Apply";
}

<h1>Apply</h1>

<h4>ApplyForJobs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Apply" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group">
                <label asp-for="UploadCv" class="control-label"></label>
                <input asp-for="UploadCv" type="file" name="Upload" class="form-control" />
                <span asp-validation-for="UploadCv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
